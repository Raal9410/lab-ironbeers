<div id="randombeer">
<div class="card mb-3" style="max-width: 800px;">
  {{#with beer}}
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{image_url}}" class="card-img" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <h6 class="card-subtitle">{{this.tagline}}</h6>
        <p class="card-text">{{description}}</p>
        <h6><b>FOOD PAIRING</b></h6>
    <ul>
      {{#each food_pairing}}
      <li>{{this}}</li>
      {{/each}}
    </ul>
    <p><b>Brewer tips: </b>
      {{brewers_tips}}</p>
      </div>
    </div>
  </div>
  {{/with}}
</div>
</div>